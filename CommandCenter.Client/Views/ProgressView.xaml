<UserControl x:Class="CommandCenter.Client.Views.ProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToggleButton Grid.Row="0" Content="Show Chat" IsChecked="{Binding ShowChat}" />
        <ToggleButton Grid.Row="1" Content="Show Prep" IsChecked="{Binding ShowPrep}" />
        <ToggleButton Grid.Row="2" Content="Show Code" IsChecked="{Binding ShowCode}" />
        <ToggleButton Grid.Row="3" Content="Show Wrap" IsChecked="{Binding ShowWrap}" />
    </Grid>
</UserControl>